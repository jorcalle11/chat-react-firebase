.chat
  padding .1em
  overflow hidden
  p
    position: relative
    padding .3em 6em .3em .3em
    overflow hidden
    margin 0
    display: inline-block
    border-radius 5px
  span
    padding 0
    font-size 1em
    margin-right 4px
    margin-top 3px
    color #4FC3F7
  small
    position: absolute
    bottom: 1%
    right: 1%
    z-index: 4

.bot
  text-align left
  p
    background #FFFFFF

.user
  text-align: right
  p
    background: #DCF8C6